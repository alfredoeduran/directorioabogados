{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["database.sqlite", "public/**", "src/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "ALLOWED_ORIGINS": "*",
    "SCRAPING_ENABLED": "false"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}